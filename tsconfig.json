{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "DOM", "DOM.Iterable", "ESNext"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "examples"]
} 